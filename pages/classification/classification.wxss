page {
  background-color: #E7E6E6;
}

.infoContainer {
  width: 90%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  align-items: flex-start;
  background-color: white;
  margin: 10rpx auto;
  border-radius: 12rpx;
}

.icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
}

.sellerName {
  height: 50rpx;
  font-size: 45rpx;
  padding: 10rpx 30rpx;
}

.moreInfoContainer {
  width: 90%;
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  align-items: flex-start;
  background-color: white;
  margin: 10rpx auto;
  border-radius: 12rpx;
}

.itemText {
  width: 150rpx;
  font-size: 30rpx;
  color: #D0CECE;
  display: grid;
  grid-gap: 10rpx;
}

.infoText {
  font-size: 30rpx;
  color: #000000;
  display: grid;
  grid-gap: 10rpx;
}

.search {
  width: calc(90% + 60rpx);
  height: 100rpx;
  background-color: white;
  margin: 10rpx auto;
  border-radius: 12rpx;
}

.contentContainer {
  height: 75vh;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.menu {
  width: 180rpx;
  height: fit-content;
  padding: 20rpx 15rpx;
  background-color: white;
  margin-left: 10rpx;
  border-radius: 12rpx;
}

.menuActive {
  border: 1rpx solid #C00000 !important;
  border-left: 10rpx solid #C00000 !important;
  width: calc(100% - 31rpx) !important;
}

.firstMenu {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: calc(100% - 20rpx);
  color: #000000;
  font-weight: bold;
  line-height: 50rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #E7E6E6;
  padding: 0 10rpx;
}

.secondMenu {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: calc(100% - 20rpx);
  color: #000000;
  line-height: 50rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #E7E6E6;
  padding: 0 10rpx;
}

.thirdMenu {
  width: calc(100% - 20rpx);
  color: #7c7c7c;
  line-height: 50rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #E7E6E6;
  padding: 0 10rpx;
}

.scrollClass {
  height: 100%;
  width: 530rpx;
  padding: 0 10rpx;
}

.scrollContainer {
  width: 530rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.productContainer {
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
}

.productCard {
  position: relative;
  width: 260rpx;
  height: fit-content;
  background-color: #ffffff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.num {
  width: 50rpx;
  height: 50rpx;
  margin-top: -25rpx;
  z-index: 2;
  margin-left: 200rpx;
  position: absolute;
  right: 0rpx;
  top: 20rpx;
  background-color: #C00000;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  text-align: center;
}

.productCard:nth-of-type(odd) {
  margin-right: 10rpx;
}

.productImg {
  max-width: 260rpx;
  height: 200rpx;
  margin: 0 auto;
  align-self: center;
}

.productInfo {
  padding: 0 10rpx 10rpx;
}

.productName {
  height: 80rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price {
  display: flex;
  flex-direction: row;
  color: red;
  font-size: 25rpx;
}

.add {
  width: 100%;
  height: 40rpx;
  background-color: #C00000;
  color: #ffffff;
  text-align: center;
  font-size: 35rpx;
  line-height: 35rpx;
  border-radius: 0 0 10rpx 10rpx;
}

.noProduct {
  width: 530rpx;
  color: #000000;
  font-size: 30rpx;
  margin: 10rpx auto;
  text-align: center;
}

.shopping {
  z-index: 2;
  width: 50rpx;
  height: 50rpx;
  position: absolute !important;
  top: 1000rpx;
  right: 10px;
}

.infoClass {
  margin-left: -10rpx;
  color: #000000;
}

.chooseSpecs {
  padding: 10rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.spec {
  color: #C00000;
}

.avatar-wrapper {
  padding: 0;
  width: 112rpx !important;
  border-radius: 18rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.avatar {
  display: block;
  width: 112rpx;
  height: 112rpx;
}

.nickName {
  height: 100rpx;
  border-top: 2rpx solid #E7E6E6;
  border-bottom: 2rpx solid #E7E6E6;
  width: 100%;
  text-align: center
}

.submit {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #C00000;
  margin-top: 15rpx;
  padding: 0rpx;
  color: white;
}